# Production Environment Configuration для NTS Server
# Цей файл містить безпечні налаштування для роботи 24/7

# Порт сервера
PORT=8000

# КРИТИЧНО ВАЖЛИВО: Змініть цей ключ на унікальний для вашого сервера!
# Генерація нового ключа: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_immediately_in_production

# Режим роботи
NODE_ENV=production

# Налаштування бази даних
DB_PATH=./database.db

# Налаштування логування
LOG_LEVEL=info

# CORS налаштування (обмежте для безпеки)
CORS_ORIGIN=*

# Налаштування сесій
SESSION_TIMEOUT=24h

# Backup налаштування
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Налаштування безпеки
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=15m

# Налаштування моніторингу
HEALTH_CHECK_INTERVAL=30s
MEMORY_LIMIT=512m

